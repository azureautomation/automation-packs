{
  "$schema": "http://schemas.microsoft.org/azure/deploymentTemplate?api-version=2015-01-01-preview#",
  "contentVersion": "1.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Azure Automation account to deploy to."
      }
    },
    "variableName": {
      "type": "string",
      "metadata": {
        "description": "The name of the variable"
      }
    },
    "variableType": {
      "type": "string",
      "allowedValues": ["string", "integer", "dateTime", "boolean"],
      "metadata": {
        "description": "The variable type."
      }
    },
    "variableValue": {
      "type": "string",
      "metadata": {
        "description": "The value for the variable.  Make sure the value for the variable matches the type selected."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[concat(parameters('accountName'), '/', parameters('variableName')) ]",
      "type": "microsoft.automation/automationAccounts/variables",
      "apiVersion": "2015-01-01-preview",
      "tags": {},
      "properties": {
        "description": "",
        "isEncrypted": 0,
        "type": "[parameters('variableType')]",
        "value": "[concat('\"', parameters('variableValue'),'\"')]"
      }
    }
  ],

  "outputs": {}
}
